# SafeSolidity Lite Environment Variables

# Application Configuration
VITE_APP_NAME="SafeSolidity Lite"
VITE_APP_VERSION="0.1.0"
VITE_APP_DESCRIPTION="Rapid Solidity Smart Contract Auditing"

# Development Configuration
VITE_DEV_PORT=3000
VITE_PREVIEW_PORT=4173

# Build Configuration
VITE_BUILD_TARGET="ES2020"
VITE_BUILD_SOURCEMAP=true

# WASM Configuration
VITE_WASM_PATH="/wasm"
VITE_WASM_CACHE_ENABLED=true

# Analytics (Optional)
# VITE_ANALYTICS_ID=

# Error Reporting (Optional)  
# VITE_SENTRY_DSN=

# Feature Flags
VITE_ENABLE_WASM=true
VITE_ENABLE_RULE_BASED=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_EXAMPLES=true

# Security
VITE_CSP_ENABLED=true
