{
  "name": "safesolidity-lite",
  "private": true,
  "version": "0.1.0",
  "description": "Web-based front-end application for rapid Solidity smart contract auditing using WebAssembly",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "build:wasm": "./scripts/build-wasm.sh",
    "optimize": "node scripts/optimize-build.js"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/emscripten": "^1.39.13",
    "lucide-react": "^0.441.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vitest": "^2.1.1",
    "@vitest/ui": "^2.1.1"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "audit",
    "webassembly",
    "blockchain",
    "security",
    "static-analysis"
  ],
  "author": "George Pricop",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gzeu/safesolidity-lite.git"
  }
}